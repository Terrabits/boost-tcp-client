#!/usr/bin/env bash
set -o errexit   # exit on error
set -o pipefail  # exit on error in pipes
set -o nounset   # exit on unset variable
ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/../.."
cd "$ROOT_DIR"


# values
COMMIT_MSG="📝 generated updated docs"
RETURN_CODE=0
SILENT=">/dev/null 2>&1"


# generate updated docs
scripts/docs/clean
scripts/docs/build  $SILENT


# checkout gh-pages, clean
git checkout gh-pages  $SILENT
rm -rf search *.html *.png *.svg *.css *.js


# install updated docs
cp -r docs/site/html/* .
rm -rf docs


# commit and push
git add --update  $SILENT
git add --force search *.html *.png *.svg *.css *.js  $SILENT
if git commit -m "$COMMIT_MSG" $SILENT; then
  git push
else
  echo "no changes to commit"
  RETURN_CODE=1
fi


# checkout main branch
git checkout main  $SILENT
exit $RETURN_CODE
